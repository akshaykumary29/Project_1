{
    "swagger": "2.0",
    "info": {
      "title": "Fundoo APIs Backened",
      "description": "This documentation guides the user through the APIs availabe in the system.",
      "version": "1.1.0"
    },

    "paths": {
      "/register": {
        "post": {
          "tags": ["User Authentication"],
          "summary": "Register a User.",
          "parameters": [
            {
              "in": "body",
              "name": "Register Data",
              "required": true,
              "schema": {
                "type": "object",
                "required": ["firstName", "lastName", "email", "password"],
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          ],

          "description": "Register a user and get registered user `object` back from the server.",
          "produces": "application/json",
          "responses": {
            "200":{
              "description": "Success"
            },
            "400":{
              "description": "Bad request."
            },
            "500":{
              "description": "Internal Server Error."
            }
          }
        }
      },

      "/login": {
          "post": {
              "tags": [""],
              "summary": "Login a User.",
              "parameters": [
                  {
                      "in": "body",
                      "name": "Login Data",
                      "required": true,
                      "schema": {
                          "type": "object",
                          "required": ["email", "password"],
                          "properties": {
                              "email": {
                                  "type": "string"
                              },
                              "password": {
                                  "type": "string"
                              }
                          }
                      }
                  }
              ],

              "description": "Login a user and get registerd user `object` back from the server.",
              "produces":"application/json",
              "responses": {
                  "200":{
                      "description": "Success"
                  },
                  "400":{
                    "description": "Bad request."
                  },
                  "500":{
                    "description":"Internal Server Error."
                  }
              }
          }
      },

      "/forgetPassword": {
        "post": {
            "tags": [""],
            "summary": "Login a User.",
            "parameters": [
                {
                    "in": "body",
                    "name": "Reset Data",
                    "required": true,
                    "schema": {
                        "type": "object",
                        "required": [ "email" ],
                        "properties": {
                            "email": {
                                "type": "string"
                            }
                        }
                    }
                }
            ],

            "description": "Reset get registerd user `object` back from the server.",
            "produces": "application/json",
            "responses": {
                "200":{
                    "description": "Success"
                },
                "400":{
                  "description": "Bad request."
                },
                "500":{
                  "description":"Internal Server Error."
                }
            }
        }
    },

    "/resetPassword": {
      "post": {
          "tags": [""],
          "summary": "Reset user's password via a password-reset token.",
          "parameters": [
              {
                  "in": "body",
                  "name": "Reset Data",
                  "required": true,
                  "schema": {
                      "type": "object",
                      "required":[ "password" ],
                      "properties":{
                          "password":{
                              "type":"string"
                          }
                      }
                  }
              },
              {
                  "in": "header",
                  "name": "token",
                  "required":true,
                  "schema":{
                      "type":"object",
                      "required":[ "token" ],
                      "properties":{
                          "token": {
                              "type": "string"
                          }
                      }
                  }
              }
          ],

          "description":"Reset get registerd user `object` back from the server.",
          "produces":"application/json",
          "responses":{
              "200":{
                  "description": "Success"
              },
              "400":{
                  "description": "Bad request."
              },
              "401":{
                  "description": "Authorization information is missing or invalid."
              },
              "500":{
                "description":"Internal Server Error."
              }
            }
        }
      }
    }
}
